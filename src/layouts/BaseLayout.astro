---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import LocalBusinessSchema from "../components/SEO/LocalBusinessSchema.astro";
import GoogleAnalytics from "../components/Analytics/GoogleAnalytics.astro";
import { client } from "../lib/sanity";
import { SITE_SETTINGS_QUERY } from "../lib/queries";

// Fetch site settings
const settings = await client.fetch(SITE_SETTINGS_QUERY).catch(() => ({}));

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  preloadImage?: string;
  type?: "website" | "article";
}

const {
  title,
  description = settings?.description ||
    "Swift Support Solutions provides professional business consultation, financial advisory, accounting, tax support, events management, and business development services in Nepal.",
  image = "/og-image.png",
  canonicalUrl = Astro.url.href,
  preloadImage,
  type = "website",
} = Astro.props;

const siteName = settings?.title || "Swift Support Solutions";
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
const logoUrl = settings?.logo?.asset?.url;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link
      rel="icon"
      type="image/png"
      href={settings?.favicon?.asset?.url || "/assets/logo.png"}
    />
    <link
      rel="apple-touch-icon"
      href={settings?.favicon?.asset?.url || "/assets/logo.png"}
    />

    {
      settings?.googleSearchConsoleKey && (
        <meta
          name="google-site-verification"
          content={settings.googleSearchConsoleKey}
        />
      )
    }

    {preloadImage && <link rel="preload" as="image" href={preloadImage} />}

    <!-- Analytics -->
    <GoogleAnalytics id={settings?.googleAnalyticsId} />

    <!-- Business Schema -->
    <LocalBusinessSchema
      name={siteName}
      description={settings?.description}
      url={Astro.site
        ? Astro.site.href
        : "https://swiftsupportandsolutions.com.np"}
      image={logoUrl}
      telephone={settings?.phone}
      email={settings?.email}
      address={settings?.address}
      openingHours={settings?.openingHours}
      priceRange={settings?.priceRange}
      latitude={settings?.latitude}
      longitude={settings?.longitude}
      socialLinks={settings?.socialLinks}
    />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content={new URL(
        image,
        Astro.site ?? "https://swiftsupportandsolutions.com.np",
      ).href}
    />
    <meta property="og:site_name" content={siteName} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content={new URL(
        image,
        Astro.site ?? "https://swiftsupportandsolutions.com.np",
      ).href}
    />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdn.sanity.io" />
  </head>
  <body class="bg-white text-slate-900">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <!-- WhatsApp Floating Button -->
    <a
      href="https://wa.me/9779849755708"
      target="_blank"
      rel="noopener noreferrer"
      class="fixed bottom-6 right-6 lg:bottom-8 lg:right-8 z-[100] bg-[#25D366] text-white w-14 h-14 sm:w-16 sm:h-16 rounded-full shadow-lg hover:scale-110 hover:shadow-xl transition-transform duration-300 flex items-center justify-center p-3.5 group animate-bounce-slight"
      aria-label="Chat with us on WhatsApp"
    >
      <svg
        class="w-full h-full group-hover:animate-pulse"
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
