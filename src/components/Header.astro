---
import { client } from "../lib/sanity";
import { SITE_SETTINGS_QUERY } from "../lib/queries";

const settings = await client.fetch(SITE_SETTINGS_QUERY).catch(() => null);

const navLinks = settings?.navLinks ?? [
    { label: "Home", href: "/" },
    { label: "Services", href: "/services" },
    { label: "About", href: "/about" },
    { label: "Blog", href: "/blog" },
    { label: "Contact", href: "/contact" },
];

const logoSrc = settings?.logo?.asset?.url || "/assets/logo.png";
const currentPath = Astro.url.pathname;
---

<header
    class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-slate-100"
>
    <nav class="container">
        <div class="flex items-center justify-between h-16">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-3 group z-50 relative">
                <div
                    class="bg-slate-50 rounded-lg p-1 transition-colors group-hover:bg-slate-100"
                >
                    <img
                        src={logoSrc}
                        alt="Swift Support Solutions Logo"
                        class="h-10 sm:h-12 w-auto"
                    />
                </div>
                <span
                    class="text-sm sm:text-xl font-bold text-slate-900 tracking-tight"
                >
                    Swift Support & Solutions
                </span>
            </a>

            <!-- Desktop Nav -->
            <div class="hidden md:flex items-center space-x-1">
                {
                    navLinks.map((link: { label: string; href: string }) => (
                        <a
                            href={link.href}
                            class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors duration-150 ${
                                currentPath === link.href
                                    ? "text-brand-700 bg-brand-50"
                                    : "text-slate-600 hover:text-slate-900 hover:bg-slate-50"
                            }`}
                        >
                            {link.label}
                        </a>
                    ))
                }
            </div>

            <!-- CTA Button -->
            <div class="hidden md:block">
                <a href="/contact" class="btn-primary text-sm">
                    Get Free Consultation
                </a>
            </div>

            <!-- Mobile menu button -->
            <button
                id="mobile-menu-toggle"
                class="md:hidden p-2 rounded-lg text-slate-600 hover:text-slate-900 hover:bg-slate-100 transition-colors"
                aria-label="Toggle mobile menu"
                aria-expanded="false"
            >
                <svg
                    id="icon-menu"
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                <svg
                    id="icon-close"
                    class="w-5 h-5 hidden"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div
            id="mobile-menu"
            class="md:hidden hidden pb-4 border-t border-slate-100 mt-2 pt-3"
        >
            <div class="flex flex-col space-y-1">
                {
                    navLinks.map((link: { label: string; href: string }) => (
                        <a
                            href={link.href}
                            class={`px-4 py-2.5 text-sm font-medium rounded-lg transition-colors ${
                                currentPath === link.href
                                    ? "text-brand-700 bg-brand-50"
                                    : "text-slate-600 hover:text-slate-900 hover:bg-slate-50"
                            }`}
                        >
                            {link.label}
                        </a>
                    ))
                }
                <div class="pt-2">
                    <a
                        href="/contact"
                        class="btn-primary w-full text-center text-sm"
                    >
                        Get Free Consultation
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<script>
    const toggle = document.getElementById("mobile-menu-toggle");
    const menu = document.getElementById("mobile-menu");
    const iconMenu = document.getElementById("icon-menu");
    const iconClose = document.getElementById("icon-close");

    toggle?.addEventListener("click", () => {
        const isOpen = !menu?.classList.contains("hidden");
        menu?.classList.toggle("hidden");
        iconMenu?.classList.toggle("hidden");
        iconClose?.classList.toggle("hidden");
        toggle.setAttribute("aria-expanded", String(!isOpen));
    });
</script>
