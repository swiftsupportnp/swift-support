---
export interface Props {
    id: string;
}

const { id } = Astro.props;
---

<!-- Google tag (gtag.js) -->
{
    id && (
        <>
            <script
                type="text/partytown"
                async
                src={`https://www.googletagmanager.com/gtag/js?id=${id}`}
            />
            <script type="text/partytown" define:vars={{ id }}>
                window.dataLayer = window.dataLayer || [];
                function gtag() {
                    dataLayer.push(arguments);
                }
                gtag("js", new Date());
                gtag("config", id);
            </script>
        </>
    )
}
