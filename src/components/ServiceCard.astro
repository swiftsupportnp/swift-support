const design = designMap[slug] || defaultDesign;
---

<div
    class="card p-8 group hover:-translate-y-1 transition-all duration-300 h-full flex flex-col"
>
    <div
        class={`w-14 h-14 rounded-xl flex items-center justify-center mb-6 transition-colors ${design.bg} ${design.text}`}
    >
        <svg
            class="w-7 h-7"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            set:html={design.svgPath}
        />
    </div>
    <h3
        class="text-xl font-bold text-slate-900 mb-3 group-hover:text-brand-600 transition-colors"
    >
        {title}
    </h3>
    <p class="text-slate-600 leading-relaxed mb-6 flex-grow">
        {tagline}
    </p>
    <div
        class="mt-auto pt-4 border-t border-slate-50 flex items-center justify-between w-full"
    >
        <a
            href={`/services/${slug}`}
            class={`inline-flex items-center text-sm font-semibold transition-colors group-hover:un-underline ${design.text.split(" ")[0]} group-hover:text-brand-700`}
        >
            Learn more
            <svg
                class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
        </a>
        {
            (benefitCount ?? 0) > 0 && (
                <span class="text-xs text-slate-400 font-medium whitespace-nowrap">
                    {benefitCount} Core Features
                </span>
            )
        }
    </div>
</div>
