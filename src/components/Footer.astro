---
import { client } from "../lib/sanity";
import { SITE_SETTINGS_QUERY } from "../lib/queries";

const settings = await client.fetch(SITE_SETTINGS_QUERY).catch(() => null);

const services = [
    { label: "Business Consultation", href: "/services/business-consultation" },
    { label: "Business Financial", href: "/services/business-financial" },
    { label: "Events Management", href: "/services/events-management" },
    {
        label: "Accounting & Bookkeeping",
        href: "/services/accounting-bookkeeping",
    },
    { label: "Tax, VAT & Audit", href: "/services/tax-vat-audit" },
    { label: "Fundraising Solutions", href: "/services/fundraising-solutions" },
    { label: "Marketing & Branding", href: "/services/marketing-branding" },
    { label: "Project Management", href: "/services/project-management" },
    { label: "Business Development", href: "/services/business-development" },
];

const logoSrc = settings?.logo?.asset?.url || "/assets/logo.png";
---

<footer class="bg-slate-900 text-slate-300">
    <!-- Top Section -->
    <div class="container py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
            <!-- Brand -->
            <div class="lg:col-span-1">
                <a href="/" class="flex items-center space-x-3 mb-6">
                    <img
                        src={logoSrc}
                        alt="Swift Support Solutions"
                        class="h-10 sm:h-12 w-auto bg-white rounded-lg p-1"
                    />
                    <span class="text-xl font-bold text-white tracking-tight">
                        Swift Support & Solutions
                    </span>
                </a>
                <p class="text-sm text-slate-400 leading-relaxed">
                    Professional business consulting and support services
                    trusted by companies across Nepal. Registered under
                    Companies Act 2063.
                </p>
                <!-- Social Links -->
                <div class="flex items-center space-x-3 mt-5">
                    {
                        settings?.socialLinks?.facebook && (
                            <a
                                href={settings.socialLinks.facebook}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Facebook"
                                class="text-slate-400 hover:text-white transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                                </svg>
                            </a>
                        )
                    }
                    {
                        settings?.socialLinks?.linkedin && (
                            <a
                                href={settings.socialLinks.linkedin}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="LinkedIn"
                                class="text-slate-400 hover:text-white transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                                </svg>
                            </a>
                        )
                    }
                    {
                        settings?.socialLinks?.instagram && (
                            <a
                                href={settings.socialLinks.instagram}
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Instagram"
                                class="text-slate-400 hover:text-white transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                                </svg>
                            </a>
                        )
                    }
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h3
                    class="text-white font-semibold text-sm uppercase tracking-wider mb-4"
                >
                    Quick Links
                </h3>
                <ul class="space-y-2.5">
                    {
                        [
                            { label: "Home", href: "/" },
                            { label: "About Us", href: "/about" },
                            { label: "Our Services", href: "/services" },
                            { label: "Blog", href: "/blog" },
                            { label: "Contact", href: "/contact" },
                            { label: "Privacy Policy", href: "/privacy" },
                            { label: "Terms of Service", href: "/terms" },
                        ].map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-slate-400 hover:text-white transition-colors"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Services -->
            <div>
                <h3
                    class="text-white font-semibold text-sm uppercase tracking-wider mb-4"
                >
                    Our Services
                </h3>
                <ul class="space-y-2.5">
                    {
                        services.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-slate-400 hover:text-white transition-colors"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Contact -->
            <div>
                <h3
                    class="text-white font-semibold text-sm uppercase tracking-wider mb-4"
                >
                    Contact
                </h3>
                <ul class="space-y-3">
                    {
                        settings?.address && (
                            <li class="flex items-start space-x-2.5">
                                <svg
                                    class="w-4 h-4 mt-0.5 text-amber-400 flex-shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    />
                                </svg>
                                <span class="text-sm text-slate-400">
                                    {settings.address}
                                </span>
                            </li>
                        )
                    }
                    {
                        settings?.email ? (
                            <li class="flex items-center space-x-2.5">
                                <svg
                                    class="w-4 h-4 text-amber-400 flex-shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    />
                                </svg>
                                <a
                                    href={`mailto:${settings.email}`}
                                    class="text-sm text-slate-400 hover:text-white transition-colors"
                                >
                                    {settings.email}
                                </a>
                            </li>
                        ) : settings?.phone ? (
                            <li class="flex items-center space-x-2.5">
                                <svg
                                    class="w-4 h-4 text-amber-400 flex-shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    />
                                </svg>
                                <a
                                    href={`tel:${settings.phone}`}
                                    class="text-sm text-slate-400 hover:text-white transition-colors"
                                >
                                    {settings.phone}
                                </a>
                            </li>
                        ) : (
                            <li class="flex items-start space-x-2.5">
                                <svg
                                    class="w-4 h-4 mt-0.5 text-amber-400 flex-shrink-0"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    />
                                </svg>
                                <span class="text-sm text-slate-400">
                                    Kathmandu, Bagmati Province, Nepal
                                </span>
                            </li>
                        )
                    }
                    <li class="flex items-start space-x-2.5">
                        <svg
                            class="w-4 h-4 mt-0.5 text-amber-400 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        <span class="text-sm text-slate-400"
                            >Sun to Fri: 9:00 AM to 6:00 PM (NPT)</span
                        >
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-slate-800">
        <div
            class="container py-5 flex flex-col sm:flex-row items-center justify-between gap-3"
        >
            <p class="text-sm text-slate-500">
                {
                    settings?.footerText ??
                        `Â© ${new Date().getFullYear()} Swift Support Solutions Pvt. Ltd. All rights reserved. Registered under Companies Act 2063, Nepal.`
                }
            </p>
            <div class="flex items-center space-x-5">
                <a
                    href="/privacy"
                    class="text-xs text-slate-500 hover:text-slate-300 transition-colors"
                    >Privacy Policy</a
                >
                <a
                    href="/terms"
                    class="text-xs text-slate-500 hover:text-slate-300 transition-colors"
                    >Terms of Service</a
                >
            </div>
        </div>
    </div>
</footer>
