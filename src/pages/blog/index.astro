---
export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
import { client } from '../../lib/sanity';
import { ALL_POSTS_QUERY, ALL_CATEGORIES_QUERY } from '../../lib/queries';

const posts = await client.fetch(ALL_POSTS_QUERY).catch(() => []);
const categories = await client.fetch(ALL_CATEGORIES_QUERY).catch(() => []);
---

<BaseLayout
  title="Blog"
  description="Read practical articles on IT, software, digital marketing, and business technology from the Swift Support team in Nepal."
>
  <!-- Page Header -->
  <section class="relative bg-slate-900 text-white overflow-hidden">
    <div class="absolute inset-0">
      <img src="https://images.unsplash.com/photo-1519389953887-f2722ce05888?q=80&w=2000&auto=format&fit=crop" class="w-full h-full object-cover opacity-20" alt="Blog background" />
      <div class="absolute inset-0 bg-gradient-to-t from-slate-900 to-slate-900/60"></div>
    </div>
    <div class="container relative py-20 lg:py-24 z-10">
      <div class="max-w-3xl">
        <div class="inline-flex items-center px-4 py-1.5 rounded-full bg-brand-500/20 text-brand-300 text-sm font-medium mb-6 border border-brand-500/30 backdrop-blur-sm">
          Insights & Ideas
        </div>
        <h1 class="text-4xl lg:text-5xl font-bold mb-6 leading-tight">Expert Tech & Business Knowledge</h1>
        <p class="text-slate-300 text-lg leading-relaxed max-w-2xl">
          Practical articles on IT, technology, digital marketing, and running a business in Nepal's evolving landscape, written by our team.
        </p>
      </div>
    </div>
  </section>

  <!-- Blog Content -->
  <section class="py-16 bg-white">
    <div class="container">
      {posts.length > 0 ? (
        <div class="grid md:grid-cols-12 gap-10">
          <!-- Posts Grid -->
          <div class="md:col-span-8">
            <!-- Featured Post -->
            {posts[0] && (
              <a href={`/blog/${posts[0].slug.current}`} class="block card overflow-hidden group mb-8">
                {posts[0].mainImage?.asset?.url && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={posts[0].mainImage.asset.url + '?w=800&h=450&fit=crop&auto=format'}
                      alt={posts[0].mainImage.alt ?? posts[0].title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      width="800"
                      height="450"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="flex items-center gap-3 mb-3">
                    {posts[0].categories?.[0] && (
                      <span class="badge bg-brand-50 text-brand-700">{posts[0].categories[0].title}</span>
                    )}
                    <span class="text-xs text-slate-400">
                      {new Date(posts[0].publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </span>
                  </div>
                  <h2 class="text-xl font-bold text-slate-900 group-hover:text-brand-700 transition-colors mb-2">{posts[0].title}</h2>
                  <p class="text-sm text-slate-500 leading-relaxed line-clamp-3">{posts[0].excerpt}</p>
                  {posts[0].author && (
                    <div class="flex items-center space-x-2.5 mt-4 pt-4 border-t border-slate-100">
                      <div class="w-7 h-7 rounded-full bg-brand-100 flex items-center justify-center text-xs font-semibold text-brand-700">
                        {posts[0].author.name?.[0] ?? 'A'}
                      </div>
                      <span class="text-xs text-slate-500">{posts[0].author.name}</span>
                      {posts[0].readingTime && <span class="text-slate-300">·</span>}
                      {posts[0].readingTime && <span class="text-xs text-slate-500">{posts[0].readingTime} min read</span>}
                    </div>
                  )}
                </div>
              </a>
            )}

            <!-- Remaining Posts -->
            <div class="grid sm:grid-cols-2 gap-6">
              {posts.slice(1).map((post: any) => (
                <a href={`/blog/${post.slug.current}`} class="card overflow-hidden group">
                  {post.mainImage?.asset?.url && (
                    <div class="aspect-video overflow-hidden">
                      <img
                        src={post.mainImage.asset.url + '?w=500&h=280&fit=crop&auto=format'}
                        alt={post.mainImage.alt ?? post.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        width="500"
                        height="280"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="p-5">
                    <div class="flex items-center gap-2 mb-2">
                      {post.categories?.[0] && (
                        <span class="badge bg-brand-50 text-brand-700 text-xs">{post.categories[0].title}</span>
                      )}
                    </div>
                    <h3 class="font-semibold text-slate-900 group-hover:text-brand-700 transition-colors leading-snug mb-1">{post.title}</h3>
                    <p class="text-xs text-slate-400">
                      {new Date(post.publishedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                      {post.readingTime && ` · ${post.readingTime} min`}
                    </p>
                  </div>
                </a>
              ))}
            </div>
          </div>

          <!-- Sidebar -->
          <aside class="md:col-span-4 space-y-6">
            <!-- Categories -->
            {categories.length > 0 && (
              <div class="card p-5">
                <h3 class="font-semibold text-slate-900 mb-4">Categories</h3>
                <ul class="space-y-2">
                  {categories.map((cat: any) => (
                    <li>
                      <a href={`/blog?category=${cat.slug.current}`} class="flex items-center justify-between text-sm text-slate-600 hover:text-brand-700 transition-colors py-1">
                        <span>{cat.title}</span>
                        <svg class="w-3.5 h-3.5 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Newsletter / CTA -->
            <div class="bg-brand-900 rounded-xl p-5 text-white">
              <h3 class="font-semibold mb-2">Stay Updated</h3>
              <p class="text-brand-200 text-sm mb-4">Get the latest tech insights for Nepal businesses delivered to your inbox.</p>
              <a href="/contact" class="btn-primary bg-white text-brand-900 hover:bg-slate-100 text-sm w-full text-center block">
                Contact Us
              </a>
            </div>
          </aside>
        </div>
      ) : (
        <div class="text-center py-24 text-slate-400">
          <svg class="w-12 h-12 mx-auto mb-4 text-slate-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <p class="font-medium text-slate-500">Blog posts coming soon.</p>
          <p class="text-sm mt-1">Check back for practical insights on tech and business in Nepal.</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
