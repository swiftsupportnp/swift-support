---
export const prerender = true;
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
    title="Contact Us"
    description="Get in touch with Swift Support Solutions. We are here to help with business consultation, financial advisory, accounting, tax support, events management, and more."
>
    <!-- Page Header -->
    <section class="bg-slate-900 text-white">
        <div class="container py-16">
            <div class="max-w-2xl">
                <div
                    class="inline-flex items-center px-3 py-1 rounded-full bg-brand-800/50 text-brand-200 text-xs font-medium mb-4 border border-brand-700/40"
                >
                    Contact Us
                </div>
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">
                    Let's Talk About Your Business
                </h1>
                <p class="text-slate-400 text-lg leading-relaxed">
                    Whether you have a specific project in mind or just want to
                    understand your options, we are happy to have a
                    conversation. No sales pressure, no complicated proposals.
                </p>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-16 bg-white">
        <div class="container">
            <div class="grid lg:grid-cols-3 gap-12">
                <!-- Contact Form -->
                <div class="lg:col-span-2">
                    <h2 class="text-2xl font-bold text-slate-900 mb-6">
                        Send Us a Message
                    </h2>
                    <form
                        id="contact-form"
                        class="space-y-5"
                        action="/api/contact"
                        method="POST"
                    >
                        <div class="grid sm:grid-cols-2 gap-5">
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-medium text-slate-700 mb-1.5"
                                    >Full Name</label
                                >
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    placeholder="Bikash Thapa"
                                    class="w-full px-4 py-2.5 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors placeholder-slate-400"
                                />
                            </div>
                            <div>
                                <label
                                    for="email"
                                    class="block text-sm font-medium text-slate-700 mb-1.5"
                                    >Email Address</label
                                >
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    placeholder="bikash@yourcompany.com"
                                    class="w-full px-4 py-2.5 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors placeholder-slate-400"
                                />
                            </div>
                        </div>

                        <div class="grid sm:grid-cols-2 gap-5">
                            <div>
                                <label
                                    for="phone"
                                    class="block text-sm font-medium text-slate-700 mb-1.5"
                                    >Phone Number <span class="text-slate-400"
                                        >(optional)</span
                                    ></label
                                >
                                <input
                                    type="tel"
                                    id="phone"
                                    name="phone"
                                    placeholder="+977 98XXXXXXXX"
                                    class="w-full px-4 py-2.5 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors placeholder-slate-400"
                                />
                            </div>
                            <div>
                                <label
                                    for="company"
                                    class="block text-sm font-medium text-slate-700 mb-1.5"
                                    >Company Name <span class="text-slate-400"
                                        >(optional)</span
                                    ></label
                                >
                                <input
                                    type="text"
                                    id="company"
                                    name="company"
                                    placeholder="Your Company Pvt. Ltd."
                                    class="w-full px-4 py-2.5 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors placeholder-slate-400"
                                />
                            </div>
                        </div>

                        <div>
                            <label
                                for="service"
                                class="block text-sm font-medium text-slate-700 mb-1.5"
                                >What can we help you with?</label
                            >
                            <select
                                id="service"
                                name="service"
                                class="w-full px-4 py-2.5 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors text-slate-700 bg-white"
                            >
                                <option value=""
                                    >Select a service area...</option
                                >
                                <option value="business-consultation"
                                    >Business Consultation</option
                                >
                                <option value="business-financial"
                                    >Business Financial</option
                                >
                                <option value="events-management"
                                    >Events Management</option
                                >
                                <option value="accounting-bookkeeping"
                                    >Accounting &amp; Bookkeeping</option
                                >
                                <option value="tax-vat-audit"
                                    >Tax, VAT &amp; Audit Support</option
                                >
                                <option value="fundraising-solutions"
                                    >Fundraising Solutions</option
                                >
                                <option value="marketing-branding"
                                    >Marketing &amp; Branding</option
                                >
                                <option value="project-management"
                                    >Project Management</option
                                >
                                <option value="business-development"
                                    >Business Development</option
                                >
                                <option value="other">Something else</option>
                            </select>
                        </div>

                        <div>
                            <label
                                for="message"
                                class="block text-sm font-medium text-slate-700 mb-1.5"
                                >Message</label
                            >
                            <textarea
                                id="message"
                                name="message"
                                required
                                rows="5"
                                placeholder="Tell us a bit about your situation and what you are looking to achieve..."
                                class="w-full px-4 py-2.5 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 outline-none transition-colors placeholder-slate-400 resize-none"
                            ></textarea>
                        </div>

                        <div>
                            <button
                                type="submit"
                                class="btn-primary w-full sm:w-auto px-8 py-3 text-sm"
                                id="submit-btn"
                            >
                                Send Message
                            </button>
                        </div>

                        <div
                            id="form-success"
                            class="hidden p-4 rounded-lg bg-green-50 border border-green-200"
                        >
                            <p class="text-sm text-green-700 font-medium">
                                Thank you for reaching out. We will get back to
                                you within 1 business day.
                            </p>
                        </div>
                        <div
                            id="form-error"
                            class="hidden p-4 rounded-lg bg-red-50 border border-red-200"
                        >
                            <p class="text-sm text-red-700">
                                Something went wrong. Please try again or email
                                us directly.
                            </p>
                        </div>
                    </form>
                </div>

                <!-- Contact Info Sidebar -->
                <aside class="space-y-6">
                    <div>
                        <h2 class="text-2xl font-bold text-slate-900 mb-6">
                            Get in Touch
                        </h2>
                        <ul class="space-y-5">
                            <li>
                                <div class="flex items-start space-x-3.5">
                                    <div
                                        class="w-9 h-9 rounded-lg bg-brand-100 flex items-center justify-center text-brand-700 flex-shrink-0 mt-0.5"
                                    >
                                        <svg
                                            class="w-4 h-4 text-[#25D366]"
                                            fill="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                                            ></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p
                                            class="text-xs text-slate-500 font-medium mb-0.5"
                                        >
                                            WhatsApp
                                        </p>
                                        <a
                                            href="https://wa.me/9779849755708"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="text-sm text-slate-800 hover:text-brand-700 transition-colors"
                                            >Message Details Instantly</a
                                        >
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="flex items-start space-x-3.5">
                                    <div
                                        class="w-9 h-9 rounded-lg bg-brand-100 flex items-center justify-center text-brand-700 flex-shrink-0 mt-0.5"
                                    >
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                            ></path>
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                            ></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p
                                            class="text-xs text-slate-500 font-medium mb-0.5"
                                        >
                                            Office
                                        </p>
                                        <p class="text-sm text-slate-800">
                                            M9Q2+45R, Shakti Vinayak Marg<br />
                                            Kathmandu 44600
                                        </p>
                                        <a
                                            href="https://maps.app.goo.gl/fE7xEiB6gi7CHyra6"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="text-xs text-brand-600 hover:text-brand-700 transition-colors mt-1 inline-block"
                                        >
                                            View on Google Maps
                                        </a>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="flex items-start space-x-3.5">
                                    <div
                                        class="w-9 h-9 rounded-lg bg-brand-100 flex items-center justify-center text-brand-700 flex-shrink-0 mt-0.5"
                                    >
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                            ></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p
                                            class="text-xs text-slate-500 font-medium mb-0.5"
                                        >
                                            Phone
                                        </p>
                                        <a
                                            href="tel:+9779849755708"
                                            class="text-sm text-slate-800 hover:text-brand-700 transition-colors"
                                            >+977-9849755708</a
                                        >
                                        <p
                                            class="text-xs text-slate-400 mt-0.5"
                                        >
                                            Mon-Fri, 9am to 6pm
                                        </p>
                                    </div>
                                </div>
                            </li>

                            <!-- Response Time -->
                            <div class="card p-5 bg-slate-50">
                                <h3 class="font-semibold text-slate-900 mb-3">
                                    What To Expect
                                </h3>
                                <ul class="space-y-2.5">
                                    {
                                        [
                                            "We respond to all inquiries within 1 business day",
                                            "New client consultations are always free",
                                            "No obligation, no pressure, just a conversation",
                                        ].map((item) => (
                                            <li class="flex items-start space-x-2.5 text-sm text-slate-600">
                                                <svg
                                                    class="w-4 h-4 text-brand-600 flex-shrink-0 mt-0.5"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M5 13l4 4L19 7"
                                                    />
                                                </svg>
                                                <span>{item}</span>
                                            </li>
                                        ))
                                    }
                                </ul>
                            </div>
                        </ul>
                    </div>
                </aside>
            </div>

            <!-- Map Section -->
            <section
                class="bg-slate-100 rounded-2xl shadow-lg border border-slate-200 overflow-hidden h-96 mt-12"
            >
                <iframe
                    title="Swift Support Nepal Office Location"
                    src="https://maps.google.com/maps?q=27.687865867301603%2C%2085.35039386936315&t=&z=15&ie=UTF8&iwloc=&output=embed"
                    class="w-full h-full border-0"
                    loading="lazy"
                    allowfullscreen></iframe>
            </section>
        </div>

        <script>
            const form = document.getElementById(
                "contact-form",
            ) as HTMLFormElement;
            const submitBtn = document.getElementById(
                "submit-btn",
            ) as HTMLButtonElement;
            const successDiv = document.getElementById(
                "form-success",
            ) as HTMLDivElement;
            const errorDiv = document.getElementById(
                "form-error",
            ) as HTMLDivElement;

            form?.addEventListener("submit", async (e) => {
                e.preventDefault();
                submitBtn.textContent = "Sending...";
                submitBtn.disabled = true;

                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());

                try {
                    // For now, this logs the data. Replace with actual API endpoint.
                    console.log("Form submission:", data);
                    await new Promise((resolve) => setTimeout(resolve, 1000));
                    successDiv.classList.remove("hidden");
                    form.reset();
                } catch (err) {
                    errorDiv.classList.remove("hidden");
                } finally {
                    submitBtn.textContent = "Send Message";
                    submitBtn.disabled = false;
                }
            });
        </script>
    </section>
</BaseLayout>
