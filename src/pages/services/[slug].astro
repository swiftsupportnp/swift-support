---
export const prerender = true;
import BaseLayout from "../../layouts/BaseLayout.astro";
import { client } from "../../lib/sanity";
import {
    SERVICE_BY_SLUG_QUERY,
    ALL_SERVICE_SLUGS_QUERY,
} from "../../lib/queries";
import RichText from "../../components/RichText";

export async function getStaticPaths() {
    const services = await client.fetch(ALL_SERVICE_SLUGS_QUERY);
    return services.map((s: { slug: string }) => ({
        params: { slug: s.slug },
    }));
}

const { slug } = Astro.params;
const service = await client.fetch(SERVICE_BY_SLUG_QUERY, { slug });

if (!service) {
    return Astro.redirect("/services");
}

const rawSeoTitle = service.seo?.title ?? service.title;
const seoTitle =
    rawSeoTitle.includes("Kathmandu") || rawSeoTitle.includes("Nepal")
        ? rawSeoTitle
        : `${rawSeoTitle} in Kathmandu, Nepal`;

const rawSeoDescription =
    service.seo?.description ?? service.description ?? service.tagline;
const seoDescription =
    (rawSeoDescription || "").includes("Kathmandu") ||
    (rawSeoDescription || "").includes("Nepal")
        ? rawSeoDescription
        : `${rawSeoDescription || service.title} provided by Swift Support in Kathmandu, Nepal.`;
---

<BaseLayout
    title={seoTitle}
    description={seoDescription}
    image={service.heroImage?.asset?.url}
    type="website"
>
    <!-- Breadcrumb -->
    <nav class="bg-white border-b border-slate-100" aria-label="Breadcrumb">
        <div class="container py-3">
            <ol class="flex items-center space-x-2 text-xs text-slate-500">
                <li><a href="/" class="hover:text-brand-700">Home</a></li>
                <li><span class="text-slate-300">/</span></li>
                <li>
                    <a href="/services" class="hover:text-brand-700">Services</a
                    >
                </li>
                <li><span class="text-slate-300">/</span></li>
                <li class="text-slate-700 font-medium">{service.title}</li>
            </ol>
        </div>
    </nav>

    <!-- Hero -->
    <section
        class="bg-gradient-to-br from-slate-900 to-brand-900 text-white"
        style={service.heroImage?.asset?.url
            ? `background-image: linear-gradient(rgba(15,23,42,0.85), rgba(30,66,159,0.9)), url(${service.heroImage.asset.url}); background-size: cover; background-position: center;`
            : ""}
    >
        <div class="container py-16 lg:py-24">
            <div class="max-w-3xl">
                <h1
                    class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-3 text-balance"
                >
                    {service.title}
                </h1>
                <div
                    class="inline-flex items-center text-brand-200 font-medium mb-5"
                >
                    <svg
                        class="w-5 h-5 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        ></path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Kathmandu, Nepal
                </div>
                <p class="text-lg text-slate-300 leading-relaxed max-w-2xl">
                    {service.tagline}
                </p>
                <div class="mt-8">
                    <a href="/contact" class="btn-primary text-base px-7 py-3"
                        >Get Started Today</a
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container py-16">
        <div class="grid lg:grid-cols-3 gap-12">
            <!-- Left / Main -->
            <div class="lg:col-span-2 space-y-12">
                <!-- Overview -->
                {
                    service.description && (
                        <section>
                            <h2 class="text-2xl font-bold text-slate-900 mb-4">
                                About This Service
                            </h2>
                            <p class="text-slate-600 leading-relaxed text-base">
                                {service.description}
                            </p>
                        </section>
                    )
                }

                <!-- Benefits -->
                {
                    service.benefits?.length > 0 && (
                        <section>
                            <h2 class="text-2xl font-bold text-slate-900 mb-6">
                                Key Benefits
                            </h2>
                            <div class="grid sm:grid-cols-2 gap-5">
                                {service.benefits.map((b: any) => (
                                    <div class="flex items-start space-x-3 p-4 rounded-xl border border-slate-100 bg-slate-50">
                                        <div class="w-7 h-7 rounded-full bg-brand-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                                            <svg
                                                class="w-3.5 h-3.5 text-brand-700"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2.5"
                                                    d="M5 13l4 4L19 7"
                                                />
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="font-semibold text-slate-900 text-sm mb-0.5">
                                                {b.title}
                                            </h3>
                                            <p class="text-xs text-slate-500 leading-relaxed">
                                                {b.description}
                                            </p>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </section>
                    )
                }

                <!-- How We Work -->
                {
                    service.processSteps?.length > 0 && (
                        <section>
                            <h2 class="text-2xl font-bold text-slate-900 mb-6">
                                How We Work
                            </h2>
                            <div class="space-y-5">
                                {service.processSteps.map(
                                    (step: any, index: number) => (
                                        <div class="flex items-start space-x-4">
                                            <div class="w-9 h-9 rounded-full bg-brand-700 text-white flex items-center justify-center font-bold text-sm flex-shrink-0">
                                                {step.step ?? index + 1}
                                            </div>
                                            <div class="pt-1">
                                                <h3 class="font-semibold text-slate-900 mb-1">
                                                    {step.title}
                                                </h3>
                                                <p class="text-sm text-slate-500 leading-relaxed">
                                                    {step.description}
                                                </p>
                                            </div>
                                        </div>
                                    ),
                                )}
                            </div>
                        </section>
                    )
                }

                <!-- Rich Text Body -->
                {
                    service.body && (
                        <section class="mt-8 mb-12">
                            <RichText value={service.body} client:load />
                        </section>
                    )
                }

                <!-- FAQs -->
                {
                    service.faqs?.length > 0 && (
                        <section>
                            <h2 class="text-2xl font-bold text-slate-900 mb-6">
                                Frequently Asked Questions
                            </h2>
                            <div class="space-y-4" id="faq-list">
                                {service.faqs.map((faq: any, index: number) => (
                                    <details
                                        class="group border border-slate-200 rounded-xl p-5 cursor-pointer"
                                        id={`faq-${index}`}
                                    >
                                        <summary class="flex items-center justify-between font-medium text-slate-900 text-sm list-none">
                                            {faq.question}
                                            <svg
                                                class="w-4 h-4 text-slate-400 flex-shrink-0 ml-3 group-open:rotate-180 transition-transform"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M19 9l-7 7-7-7"
                                                />
                                            </svg>
                                        </summary>
                                        <p class="text-sm text-slate-500 mt-3 leading-relaxed">
                                            {faq.answer}
                                        </p>
                                    </details>
                                ))}
                            </div>
                        </section>
                    )
                }
            </div>

            <!-- Right Sidebar -->
            <aside class="lg:col-span-1">
                <div class="sticky top-24 space-y-5">
                    <!-- CTA Card -->
                    <div class="bg-brand-900 rounded-2xl p-6 text-white">
                        <h3 class="font-bold text-lg mb-2">Ready to Begin?</h3>
                        <p class="text-brand-200 text-sm mb-5 leading-relaxed">
                            Talk to our team about how this service can help
                            your specific situation.
                        </p>
                        <a
                            href="/contact"
                            class="block w-full text-center btn-primary bg-white text-brand-900 hover:bg-slate-100 text-sm"
                        >
                            Book a Free Consultation
                        </a>
                    </div>

                    <!-- Why Swift Support -->
                    <div class="card p-6">
                        <h3 class="font-semibold text-slate-900 mb-4">
                            Why Swift Support?
                        </h3>
                        <ul class="space-y-3">
                            {
                                [
                                    "Dedicated point of contact for your account",
                                    "Fixed pricing with no hidden charges",
                                    "Response within 2 hours for support issues",
                                    "Team based in Nepal, familiar with local context",
                                    "Regular reporting on work done",
                                ].map((item) => (
                                    <li class="flex items-start space-x-2.5 text-sm text-slate-600">
                                        <svg
                                            class="w-4 h-4 text-brand-600 flex-shrink-0 mt-0.5"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                        <span>{item}</span>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>

                    <!-- Contact Info -->
                    <div class="card p-6">
                        <h3 class="font-semibold text-slate-900 mb-4">
                            Contact Us Directly
                        </h3>
                        <div class="space-y-3">
                            <a
                                href="https://wa.me/9779849755708"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center space-x-2.5 text-sm text-slate-600 hover:text-brand-700 transition-colors"
                            >
                                <svg
                                    class="w-4 h-4 flex-shrink-0 text-[#25D366]"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                                    ></path>
                                </svg>
                                <span>Message on WhatsApp for Fast Contact</span
                                >
                            </a>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>

    <!-- Schema.org for Service -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "Service",
            name: service.title,
            description: seoDescription,
            provider: {
                "@type": "LocalBusiness",
                name: "Swift Support Solutions",
                address: {
                    "@type": "PostalAddress",
                    addressLocality: "Kathmandu",
                    addressRegion: "Bagmati",
                    addressCountry: "NP",
                },
            },
            areaServed: {
                "@type": "City",
                name: "Kathmandu",
            },
        })}
    />
</BaseLayout>
